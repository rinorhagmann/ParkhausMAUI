<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ParkhausMAUI.ViewModels"
             xmlns:models="clr-namespace:ParkhausMAUI.Models"
             x:Class="ParkhausMAUI.Views.HistoryPage"
             x:DataType="viewmodel:HistoryViewModel"
             Title="Verlauf">

    <Grid Margin="10">
        <CollectionView ItemsSource="{Binding HistoryItems}"
                        EmptyView="Noch keine Parkvorgänge gespeichert.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ParkingSession">
                    <Frame Margin="0,5" Padding="15" BorderColor="#E0E0E0">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="{Binding ParkhausName}" FontAttributes="Bold" FontSize="16"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding StartTime, StringFormat='{0:dd.MM.yyyy}'}" TextColor="Gray" FontSize="12"/>
                                    <Label Text="{Binding StartTime, StringFormat='{0:HH:mm}'}" TextColor="Gray" FontSize="12"/>
                                </HorizontalStackLayout>
                                <Label Text="{Binding TotalCost, StringFormat='Gesamt: CHF {0:F2}'}" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <Button Grid.Column="1" 
                                    Text="Löschen" 
                                    TextColor="Red"
                                    FontAttributes="Bold"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HistoryViewModel}}, Path=DeleteEntryCommand}"
                                    CommandParameter="{Binding .}"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>